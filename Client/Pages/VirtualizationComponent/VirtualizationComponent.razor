@typeparam T
@using BlazorEcommerce.Client.Pages.VirtualizationBase
@using PrettyBlazor

<Condition Evaluation=@IsStateContent>
	<Match>
		<VirtualizationBase CallBackSource=RetrieveData>
			@ChildContent(context)
		</VirtualizationBase>
	</Match>
</Condition>

<Condition Evaluation=@IsStateError>
	<Match>
		<LabelBase @ref=Label Value=@ErrorMessage />
	</Match>
</Condition>
