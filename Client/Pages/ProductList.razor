@page "/productlist"

<h3>ProductList</h3>
@if (ProductService.Products == null || ProductService.Products.Count == 0)
{
    <span>Loading products...</span>
}

<Virtualize ItemsProvider="@LoadVisibleProducts"
            Context="product"
            OverscanCount=5>
    <ItemContent>
        <p>@product.Id</p>
    </ItemContent>
    <Placeholder>
        <p>
            Loading&hellip;
        </p>
    </Placeholder>
</Virtualize>
